<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vmodel="clr-namespace:CRUDMAUIV3.Models.ViewModels"
             x:Class="CRUDMAUIV3.Views.MainPage"
             Title="">
    <ContentPage.BindingContext>
        <vmodel:PersonaDepartamentoVM></vmodel:PersonaDepartamentoVM>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <ListView x:Name="PersonaView" ItemsSource="{Binding ListadoPersonas}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell x:Name="{Binding Id}">
                                <HorizontalStackLayout Margin="10">
                                    <Image Source="{Binding ImageUrl}" WidthRequest="64" HeightRequest="64">
                                        <Image.Clip>
                                            <EllipseGeometry Center="32,32" RadiusX="32" RadiusY="32"/>
                                        </Image.Clip>
                                    </Image>
                                    <Label FontSize="24" Margin="12" VerticalTextAlignment="Center">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Nombre"/>
                                                <Binding Path="Apellidos"/>
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                </HorizontalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

@model EjercicioCRUD_ASP.Models.ViewModels.PersonaListaDepartamentos

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PersonaListaDepartamentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label" for="Id">Id: </label>
                <input disabled class="form-control" type="text" name="ID" value="@Model.Persona.Id" required />
                <label class="form-label" for="Nombre">Nombre: </label>
                <input class="form-control" type="text" name="Nombre" value="@Model.Persona.Nombre" required />
                <label class="form-label" for="Apellidos">Apellidos: </label>
                <input class="form-control" type="text" name="Apellidos" value="@Model.Persona.Apellidos" required />
                <label class="form-label" for="Foto">URL Foto:</label>
                <input class="form-control" type="text" name="Foto" value="@Model.Persona.Foto" required />
                <label class="form-label" for="Telefono">Teléfono:</label>
                <input class="form-control" name="Telefono" value="@Model.Persona.Telefono" required />
                <label class="form-label" for="Direccion">Dirección:</label>
                <input class="form-control" type="text" name="Direccion" value="@Model.Persona.Direccion" required />
                <label class="form-label" for="FechaNac">Fecha de nacimiento:</label>
                <input class="form-control" type="date" name="FechaNacimiento" value="@Model.Persona.FechaNacimiento.ToString("yyyy-MM-dd")" required />
                <label class="form-label" for="IdDepartamento">Departamento: </label>
                <select class="form-select" name="IdDepartamento" required>
                    @foreach (var depto in Model.Departamentos)
                    {
                        <option value="@depto.Id" selected='@(Model.Persona.IdDepartamento == depto.Id ? "selected" : "")'>@depto.Nombre</option>
                    }
                </select>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
